%p#notice= notice

%p
  %b Name:
  = @trip.name
%p
  %b Description:
  = @trip.description

%table.table
  %tr
    %th Destination
    %th Description
    %th Show
    %th Edit
    %th Delete
  
  - @trip.destinations.each do |destination|
    %tr
      %td= link_to destination.name, edit_trip_destination_path(@trip, destination)
      %td= destination.description
      %td= link_to 'Show', trip_destination_path(@trip,destination)
      %td= link_to 'Edit', edit_trip_destination_path(@trip,destination)
      %td= link_to 'Destroy', trip_destination_path(@trip,destination), :method => :delete, :data => { :confirm => 'Are you sure?' }

%P
  = link_to "New Destination", new_trip_destination_path(@trip), class: 'btn btn-primary btn-small'

= link_to 'Edit', edit_trip_path(@trip), class: 'btn btn-small'
= link_to 'Back', trips_path, class: 'btn btn-small'
